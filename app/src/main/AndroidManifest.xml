<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carolinewallis.genchem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PeriodicTable"
            android:label="Periodic Table"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".AtomicMass"
            android:label="Atomic Mass">
        </activity>
        <activity
            android:name=".Constants"
            android:label="Common Constants">
        </activity>
        <activity
            android:name=".UnitConversion"
            android:label="Unit Conversions">
        </activity>
        <activity
            android:name=".Formula"
            android:label="Formulas">
        </activity>
    </application>

</manifest>
